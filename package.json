{
  "name": "gulp-template",
  "version": "0.2.0",
  "description": "Gulp сборка для продуктивной верстки.",
  "scripts": {
    "prepare": "husky install",
    "watch": "gulp",
    "build": "gulp build",
    "dev": "gulp dev",
    "editor-check": "editorconfig-checker --exclude '.git|node_modules|.husky'",
    "format": "prettier --write ."
  },
  "keywords": [
    "gulp"
  ],
  "author": "Sergio Eliofery",
  "license": "MIT",
  "devDependencies": {
    "editorconfig-checker": "5",
    "gulp": "^5.0.0",
    "husky": ">=7",
    "lint-staged": ">=10",
    "prettier": "^3.4.2"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "lint-staged": {
    "*": [
      "npm run editor-check",
      "npm run format"
    ]
  }
}
