{
  "name": "gulp-template",
  "version": "0.0.7",
  "description": "Gulp сборка для продуктивной верстки",
  "keywords": [
    "gulp",
    "pug",
    "webpack",
    "scss",
    "svg-sprite"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "gulp build --prod",
    "dev": "gulp watch",
    "proxy": "gulp proxy"
  },
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eliofery/gulp-template.git"
  },
  "bugs": {
    "url": "https://github.com/Eliofery/gulp-template/issues"
  },
  "homepage": "https://github.com/Eliofery/gulp-template#readme",
  "author": "Sergio Eliofery",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/register": "^7.22.5",
    "browser-sync": "^2.29.3",
    "core-js": "^3.31.1",
    "editorconfig-checker": "^5.1.1",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "pug-lint": "^2.7.0",
    "stylelint": "^15.10.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.0.1"
  },
  "lint-staged": {
    "*": "editorconfig-checker --exclude '.git|.husky|node_modules|.eslintcache'",
    "src/pug/**/*.pug": "pug-lint --fix",
    "src/scss/**/*.scss": "stylelint --fix",
    "*.js": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
