{
  "name": "gulp-template",
  "version": "0.2.0",
  "description": "Gulp сборка для продуктивной верстки.",
  "scripts": {
    "prepare": "husky install",
    "proxy": "gulp proxy",
    "watch": "gulp",
    "build": "gulp build --production",
    "editor-check": "editorconfig-checker --exclude '.git|node_modules|.husky|build'",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:pug": "pug-lint ./src/markup/**/*.pug"
  },
  "keywords": [
    "gulp",
    "webpack",
    "pug"
  ],
  "author": "Sergio Eliofery",
  "license": "MIT",
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@eslint/js": "^9.17.0",
    "@typescript-eslint/parser": "^8.18.1",
    "babel-loader": "^9.2.1",
    "browser-sync": "^3.0.3",
    "editorconfig-checker": "5",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "files-exist": "^1.1.0",
    "globals": "^15.14.0",
    "gulp": "^5.0.0",
    "gulp-avif": "^1.1.1",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-if": "^3.0.0",
    "gulp-image-resize": "^0.13.1",
    "gulp-imagemin": "^9.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-notify": "^5.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-strip-comments": "^2.6.0",
    "gulp-svg-symbol-view": "^1.0.3",
    "gulp-svg2png": "^2.0.2",
    "gulp-to-ico": "^1.0.0",
    "gulp-webp": "^5.0.0",
    "husky": ">=7",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "jstransformer": "^1.0.0",
    "jstransformer-clean-css": "^2.1.0",
    "jstransformer-highlight": "^2.0.0",
    "jstransformer-markdown-it": "^3.0.0",
    "jstransformer-scss": "^2.0.0",
    "lint-staged": ">=10",
    "markdown-it-attrs": "^4.3.0",
    "markdown-it-kbd": "^2.2.2",
    "prettier": "^3.4.2",
    "pug-include-glob": "^0.4.3",
    "pug-lint": "^2.7.0",
    "terser-webpack-plugin": "^5.3.11",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vinyl-named-with-path": "^1.0.0",
    "webpack": "^5.97.1",
    "webpack-stream": "^7.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "lint-staged": {
    "*": [
      "npm run editor-check",
      "npm run format"
    ],
    "*.pug": "npm run lint:pug",
    "*.ts": "bash -c tsc --noEmit",
    "*.{js,ts}": "npm run lint"
  }
}
